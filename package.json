{
  "name": "square-one-api",
  "version": "0.0.1",
  "description": "API for the lead tracking and resource management system.",
  "scripts": {
    "build": "node internals/scripts/build.js",
    "db:setup": "node internals/database/setup.js",
    "lint": "esw src tools --color || exit 0",
    "lint:watch": "npm run lint --watch",
    "setup": "rm -rf node_modules && yarn cache clean && yarn install",
    "start": "nodemon ./src/bin/www.js --exec babel-node",
    "start:test": "cross-env NODE_ENV=test npm start",
    "test": "find ./src -name '*.test.js' | xargs cross-env NODE_ENV=test mocha --opts ./mocha.opts || exit 0",
    "torus:start": "torus run npm run start",
    "torus:test": "cross-env NODE_ENV=test torus run npm run test"
  },
  "engines": {
    "node": "6",
    "npm": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikerourke/square-one-api"
  },
  "author": "Mike Rourke",
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "morgan": "^1.8.0",
    "pg": "^6.1.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.28.0",
    "twilio": "^2.11.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-watch": "^3.0.1",
    "flow-bin": "^0.44.2",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "sequelize-mock": "^0.7.0",
    "shelljs": "^0.7.7",
    "sql": "^0.75.0",
    "supertest": "^3.0.0"
  }
}
